@model BookModel


<div class="container">
    <h3>Book Details</h3>
    <div class="row mt-4">
        <div class="col-md-6 text-center">
            <div id="carouselBook" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Galleries.Count(); i++)
                    {
                        <li data-target="#carouselBook" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Galleries.Count(); i++)
                    {
                        <div class="@(i == 0 ? "carousel-item active" : "carousel-item")">
                            <img src="@Model.Galleries[i].URL" class="d-block w-100" alt="@Model.Galleries[i].Name">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselBook" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselBook" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">By: </span>
                    <span class="monospaced">@Model.Author</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">Read Now</button>
                </div>
            </div>
            <hr>

            <ul class="list-group">
                <li class="list-group-item">
                    <span class="font-weight-bold">Category - </span> @Model.Category
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Total pages -</span> @Model.TotalPages
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Language - </span> @Model.Language
                </li>
            </ul>
        </div>
    </div>
</div>

