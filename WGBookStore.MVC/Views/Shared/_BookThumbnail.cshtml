@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverPhotoPath) ? "/images/no-image.png" : Model.CoverPhotoPath)" class="img-thumbnail">
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : @Model.Title)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Title) ? "Description is not available" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items center">
            <div class="btn-group">
                <a class="btn btn-sm btn-outline-secondary"
                   asp-controller="Book"
                   asp-action="GetBook"
                   asp-route-id="@Model.Id">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Title) ? "NA" : Model.Author)</small>
        </div>
    </div>
</div>